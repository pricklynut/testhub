<nav aria-label="Page navigation">
    <ul class="pagination">

        <li {% if not pager.isPreviousActive %}class="disabled"{% endif %}>
            <a href="{{ path('tests_list', {'page':pager.previousPage}) }}"
               aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        {% for i in pager.firstPage..pager.lastPage %}
            {% if pager.currentPage == i %}
                <li class="active">
                    <a href="{{
                        path('tests_list', {'page': i})
                    }}">{{ i }}</a>
                </li>
            {% else %}
                <li><a href={{ path('tests_list', {'page': i}) }}>{{ i }}</a></li>
            {% endif %}
        {% endfor %}

        <li {% if not pager.isNextActive %}class="disabled"{% endif %}>
            <a href="{{ path('tests_list', {'page': pager.nextPage}) }}"
               aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>

    </ul>
</nav>
