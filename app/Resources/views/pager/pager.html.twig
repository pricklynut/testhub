<nav aria-label="Page navigation">
    <ul class="pagination">

        {% if not pager.isPreviousActive %}
            <li class="disabled">
                <span aria-hidden="true">&laquo;</span>
            </li>
        {% else %}
            <li>
                <a href="{{ path('tests_list', {'page':pager.previousPage}) }}"
                   aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        {% endif %}

        {% for i in pager.firstPage..pager.lastPage %}
            {% if pager.currentPage == i %}
                <li class="active">
                    <span>{{ i }}</span>
                </li>
            {% else %}
                <li><a href={{ path('tests_list', {'page': i}) }}>{{ i }}</a></li>
            {% endif %}
        {% endfor %}

        {% if not pager.isNextActive %}
            <li class="disabled">
                <span aria-hidden="true">&raquo;</span>
            </li>
        {% else %}
            <li>
                <a href="{{ path('tests_list', {'page': pager.nextPage}) }}"
                   aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        {% endif %}

    </ul>
</nav>
