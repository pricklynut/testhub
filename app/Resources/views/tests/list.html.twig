{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}

    <div class="wrapper container">
        <div class="row">
            <div class="content col-md-9 col-sm-8 col-xs-12">
                <h1>Поиск тестов</h1>

                <form action="">
                    <div class="form-group">
                        <input type="text" name="search" class="form-control"
                               placeholder="Название или тема..."
                               value="{% if selectedTag is not empty %}{{
                                        selectedTag.name
                                      }}{% else %}{{
                                        search
                                      }}{% endif %}">
                    </div>
                </form>

                {% if tests is not empty %}
                    {% include 'default/tests_list.html.twig' %}
                {% else %}
                    <div class="panel panel-default">
                        <div class="panel-body bg-warning">Ничего не найдено</div>
                    </div>
                {% endif %}

                {% if search is not empty or selectedTag is not empty %}
                    <a href="{{ path('tests_list') }}">&larr; вернуться</a>
                {% endif %}

                {% if pager.hasPagination %}
                    {% include 'pager/pager.html.twig' %}
                {% endif %}
            </div>

            {% include 'tests/sidebar_tests_page.html.twig' %}
        </div>
    </div>
{% endblock body %}
